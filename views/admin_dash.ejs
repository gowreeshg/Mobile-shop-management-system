                </div>

                <button type="submit" class="btn btn-primary">Search</button>
              </form>



      <h3>Low Quantity Products:</h3>
      <% if (lowQuantityProducts.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Product ID</th>
              <th>Product Category</th>
              <th>Brand Name</th>
              <th>Product Name</th>
              <th>Product Variant</th>
              <th>MRP</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% lowQuantityProducts.forEach(product => { %>
              <tr>
                <td><%= product.prod_id %></td>
                <td><%= product.prod_cat %></td>
                <td><%= product.brand_name %></td>
                <td><%= product.prod_name %></td>
                <td><%= product.prod_variant %></td>
                <td><%= product.mrp %></td>
                <td><%= product.prod_quantity %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No low quantity products found.</p>
      <% } %>
