<!-- employee_details.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Employee Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <% if (employee) { %>
    <h2>Employee Details</h2>
    <p>Employee ID: <%= employee.emp_id %></p>
    <p>Employee Name: <%= employee.emp_name %></p>
    <p>Employee Salary: <%= employee.emp_salary %></p>
    <!-- <a href="/employee_update/<%= employee.emp_id %>" class="btn btn-primary">Update</a> -->
    <% } else { %>
    <p>No employee found with the given ID.</p>
    <% } %>
  </div>
  <div class="container mt-5">
    <% if (employee) { %>
    <h2>Update Employee</h2>
    <form action="/employee_update/<%= employee.emp_id %>" method="POST">
      <div class="form-group">
        <label for="emp_name">Employee Name:</label>
        <input type="text" class="form-control" id="emp_name" name="emp_name" value="<%= employee.emp_name %>" required>
      </div>
      <div class="form-group">
        <label for="emp_salary">Salary:</label>
        <input type="text" class="form-control" id="emp_salary" name="emp_salary" value="<%= employee.emp_salary %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <% } else { %>
    <p>No employee found with the given ID.</p>
    <% } %>
    <a href="/admin_dash" class="btn btn-primary" style="margin-top:2%">Admin dashboard</a>

  </div>

</body>
</html>
