<!DOCTYPE html>
<html>
<head>
  <title>Product Search</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
  <h1>Product Search</h1>

  <form action="/prod-search" method="GET" class="mb-4">
    <div class="form-group">
      <label for="searchType">Search by:</label>
      <select class="form-control" id="searchType" name="searchType">
        <option value="prod_id">Product ID</option>
        <option value="brand_prod">Brand Name + Product Name</option>
      </select>
    </div>

    <div class="form-group">
      <label for="searchInput">Search Query:</label>
      <input type="text" class="form-control" id="searchInput" name="searchInput" required>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
  </form>

  <h2>Search Results:</h2>
  <% if (results.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Product Category</th>
          <th>Brand Name</th>
          <th>Product Name</th>
          <th>Product Variant</th>
          <th>MRP</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(result => { %>
          <tr>
            <td><%= result.prod_id %></td>
            <td><%= result.prod_cat %></td>
            <td><%= result.brand_name %></td>
            <td><%= result.prod_name %></td>
            <td><%= result.prod_variant %></td>
            <td><%= result.mrp %></td>
            <td><%= result.prod_quantity %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No results found.</p>
  <% } %>
</div>

</body>
</html>
